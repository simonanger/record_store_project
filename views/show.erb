<h2>Albums for <%= @artist.name %></h2>

<div class="grid">
  <% for album in @albums do %>
    <div class="grid-item">
    <p><%= album.title %></p>
    <p><%= album.genre %></p>
    <p><%= album.stock_level %></p>
    <form action="/album/<%= album.id %>/edit">
      <input type="submit" value="Edit Album Info">
    </form>
    <form action="/album/<%= album.id%>/delete" method="post">
      <input type="submit" value="Delete Album">
    </form>
    <p><img src="<%= album.artwork %>" alt="album-artwork" id="album_art"></p>
    </div>
  <% end %>
</div>
